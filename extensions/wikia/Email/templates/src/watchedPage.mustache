<link rel="stylesheet" href="../../styles/common.css" />
<link rel="stylesheet" href="../../styles/watchedPage.css" />

<div class="greeting">
	<p>{{salutation}}</p>
	<p>{{{articleEditedMessage}}}</p>
</div>

<table>
	<tr>
		<td valign="top">
			<div class="avatar-wrapper">
				<a href="{{editorProfilePage}}"><img class="avatar" src="{{editorAvatarURL}}" data-inline-ignore></a>
			</div>
		</td>
		<td class="widest">
			<div class="message">
				<p class="subtle">{{editorUserName}}</p>
				<p>{{timeStamp}}</p>
				<p>{{summary}}</p>
			</div>
			<a href="{{compareChangesLink}}"><button>{{compareChangesLabel}}</button></a>
		</td>
	</tr>
	<tr>
		<td colspan="2">
			<div class="links">
				<p>{{{headOver}}}</p>
				<p>{{{allChanges}}}</p>
			</div>
		</td>
	</tr>
</table>